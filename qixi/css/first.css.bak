*{padding:0;margin:0;}
ul,li{list-style-type:none;}
#content{width:100%;height:100%;overflow:hidden;position:absolute;background-color:grey;}
.content-wrap{position:relative;}
.content-wrap > li{background:red;float:left;overflow:hidden;position:relative;}
li:nth-child(2){background:blue;}
li:nth-child(3){background:green;}
.button{position:absolute;bottom:0px;}
button{width:100px;height:50px;}